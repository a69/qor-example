<div class="swiper-container qor-top-slider">
  <div class="swiper-wrapper">
    {{range $slideImage := .Setting.SlideImages}}
    <div class="swiper-slide">
      <div class="qor-slider__texts">
        <div class="container">
          <h1 class="font_montserrat qor-slider__title animated fadeInDown">{{$slideImage.Title}}</h1>
          <h2 class="qor-slider__subtitle animated fadeInDown">{{$slideImage.SubTitle}}</h2>
          <a class="qor-slider__button" href="{{$slideImage.Link}}">{{$slideImage.Button}}</a>
        </div>
      </div>
      <img src="{{$slideImage.Image}}" />
    </div>
    {{end}}
  </div>
  <div class="swiper-pagination"></div>
</div>
